<% if not @no_layout %>
<%= render :partial => "header" %>
<% end %>

<section class="show">

<ul class="thumbnails">
  <li class="span9">
    <div class="thumbnail">
      <div class="caption">
		<legend><%= t("tasks.show.title") %> <small><%= name_or_empty(@task) %></small></legend>
		<h3><%= name_or_empty(@task.type) %></h3>
	  </div>
	  <div class="row">
		<div class="span4">

		  <div class="control-group">
            <%= show_label_tag t('tasks.due_time') %>
			<%= format_datetime(@task.due_time) %>
          </div>

		  <div class="control-group">
            <%= show_label_tag t('tasks.status') %>
			<%= name_or_empty(@task.status) %>
          </div>

		</div>
	</div>
  </li>
</ul>
</section>

<%= link_to t('helpers.forms.edit'), edit_customer_contact_path(@customer, @task) %> |
<%= link_to t('helpers.forms.back'), customer_contacts_path(@customer) %>
