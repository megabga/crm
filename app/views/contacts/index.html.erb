<h1>Listing contacts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Departament</th>
    <th>Business function</th>
    <th>Phone</th>
    <th>Cell</th>
    <th>Birthday</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @contacts.each do |contact| %>
  <tr>
    <td><%= contact.name %></td>
    <td><%= contact.departament %></td>
    <td><%= contact.business_function %></td>
    <td><%= contact.phone %></td>
    <td><%= contact.cell %></td>
    <td><%= contact.birthday %></td>
    <td><%= link_to 'Show', [contact.customers, contact] %></td>
    <td><%= link_to 'Edit', edit_customers_contact_path(contact.customers, contact) %></td>
    <td><%= link_to 'Destroy', [contact.customers, contact], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

